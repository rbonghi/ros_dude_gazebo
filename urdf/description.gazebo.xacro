<robot name="dude_robot_gazebo" xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="$(find ros_dude_gazebo)/urdf/xtion_camera.gazebo.xacro"/>

  <xacro:include filename="$(find ros_dude_description)/urdf/dude.urdf.xacro" />
  <xacro:macro name="dude_robot_gazebo">

  <!-- base_link -->
  <gazebo reference="base_link">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <!-- column_body_Link -->
  <gazebo reference="column_body_Link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- electronics_Link -->
  <gazebo reference="electronics_Link">
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- wall_body_Link -->
  <!--<gazebo reference="wall_body_Link">
    <material>Gazebo/WhiteEmissive</material>
  </gazebo>-->

  <!-- battery_Link -->
  <gazebo reference="battery_Link">
    <material>Gazebo/Black</material>
  </gazebo>

  <xacro:xtion_camera_gazebo prefix="xtion_camera"/>

  <!-- Differential drive -->
	<gazebo>
		<plugin name="differential_drive_controller" filename="libgazebo_ros_diff_drive.so">
		  <alwaysOn>true</alwaysOn>
		  <updateRate>10.0</updateRate>
		  <leftJoint>right</leftJoint>
		  <rightJoint>left</rightJoint>
		  <wheelSeparation>${wheel_offset_y*2}</wheelSeparation>
		  <wheelDiameter>${wheel_radius*2}</wheelDiameter>
		  <torque>20</torque>
		  <commandTopic>/cmd_vel</commandTopic>
		  <odometryTopic>/odom</odometryTopic>
		  <odometryFrame>/odom</odometryFrame>
		  <robotBaseFrame>base_link</robotBaseFrame>
      <publishWheelTF>true</publishWheelTF>
      <publishWheelJointState>true</publishWheelJointState>
		</plugin>
	</gazebo>

  <!-- Gazebo plugin for ROS Control -->
  <!--<gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>-->
</xacro:macro>

</robot>
